<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <TextView
        android:id="@+id/dialog_recent_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:text="recent activity"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/light_black"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/dialog_exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:padding="16dp"
        android:src="@drawable/ic_clear_24dp"
        android:tint="@color/light_black"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_details_fragment_dialog_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_recent_activity_title"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        />


</RelativeLayout>