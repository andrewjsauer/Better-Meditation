<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/ly_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FEFEFE"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lists_row_height"
                android:layout_margin="2dp"
                android:background="@android:color/white"
                android:clickable="false"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:foreground="?selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                android:paddingStart="@dimen/margin_small">

    <TextView
        android:id="@+id/text_view_list_name"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="March 8, 2016 Entry"
        />


    <TextView
        android:id="@+id/text_view_number_of_journal_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_view_list_name"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:text="0"
        android:textColor="@color/light_black"
        android:textSize="@dimen/list_created_by_text_size" />
</RelativeLayout>

</android.support.v7.widget.CardView>
