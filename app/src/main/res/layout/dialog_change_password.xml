<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_change_password_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            app:errorTextAppearance="@style/TextAppearance.AppCompat"
            app:hintTextAppearance="@style/TextAppearance.AppCompat">

            <EditText
                android:id="@+id/edit_text_email_change_password_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint_text_dialog"
                android:inputType="textEmailAddress"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/text_color"
                android:theme="@style/EditTextLayout"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/old_password_change_password_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            app:errorTextAppearance="@style/TextAppearance.AppCompat"
            app:hintTextAppearance="@style/TextAppearance.AppCompat">

            <EditText
                android:id="@+id/edit_text_old_password_change_password_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/old_password_hint_text_dialog"
                android:inputType="textPassword"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/text_color"
                android:theme="@style/EditTextLayout"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_password_change_password_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            app:errorTextAppearance="@style/TextAppearance.AppCompat"
            app:hintTextAppearance="@style/TextAppearance.AppCompat">

            <EditText
                android:id="@+id/edit_text_new_password_change_password_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_password_hint_text_dialog"
                android:inputType="textPassword"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/text_color"
                android:theme="@style/EditTextLayout"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/change_password_save_button"
                style="@style/Widget.BetterBetter.Button.Login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".5"
                android:background="@color/primary_button_color"
                android:text="SAVE"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/change_password_cancel_button"
                style="@style/Widget.BetterBetter.Button.Login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".5"
                android:background="@color/light_black"
                android:layout_marginLeft="5dp"
                android:text="CANCEL"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>