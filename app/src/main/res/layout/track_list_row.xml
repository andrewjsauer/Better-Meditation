<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/track_image"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:transitionName="imageView"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/track_image"
            android:paddingTop="12dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:transitionName="titleText"
            tools:text="15 Minute Meditation"
            />


        <TextView
            android:id="@+id/track_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/track_title"
            android:layout_toRightOf="@+id/track_image"
            android:paddingBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:transitionName="descriptionText"
            tools:text="Meditation by Brother Camilus, THS, PhD"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>