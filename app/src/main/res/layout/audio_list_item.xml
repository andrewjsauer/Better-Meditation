<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#fff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >

        <TextView
            android:id="@+id/user_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Andrew"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/user_friend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            tools:text="0:15"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/user_friend_date"
            android:layout_alignBottom="@+id/user_friend_track_desc"
            android:gravity="bottom"/>

        <TextView
            android:id="@+id/user_friend_track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="15 Minute Meditation"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/user_friend_name"/>

        <TextView
            android:id="@+id/user_friend_track_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Brother Camillus, THS"
            android:layout_below="@+id/user_friend_track_title"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/user_friend_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Fri March 25 5:20 PM"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            />




    </RelativeLayout>


</android.support.v7.widget.CardView>